---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

// Get all posts, sorted by date (newest first)
const allPosts = await getCollection('posts');
const sortedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Posts â€” Cluttered Cabinet">
  <section class="max-w-4xl mx-auto px-6 md:px-12 pt-24 pb-16">
    <div class="mb-8 pb-6 border-b border-border">
      <h1 class="font-mono text-2xl text-text-primary mb-2 tracking-tight">all entries</h1>
      <p class="text-text-secondary text-xs font-mono">
        {sortedPosts.length} total
      </p>
    </div>

    <div class="space-y-0">
      {sortedPosts.map((post, index) => (
        <PostCard
          title={post.data.title}
          date={post.data.date}
          summary={post.data.summary}
          slug={post.slug}
          tags={post.data.tags}
          index={sortedPosts.length - index}
        />
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <div class="py-16">
        <p class="text-text-secondary text-sm font-mono">no entries yet</p>
      </div>
    )}
  </section>
</Layout>
