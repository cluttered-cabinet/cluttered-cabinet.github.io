---
import Layout from '../layouts/Layout.astro';

// Placeholder projects
const projects = [
  {
    title: 'project_one',
    description: 'exploring neural representations and emergent behaviors in language models',
    tags: ['ml', 'nlp'],
    link: '#'
  },
  {
    title: 'project_two',
    description: 'scalable systems for distributed machine learning training and inference',
    tags: ['systems', 'infra'],
    link: '#'
  },
  {
    title: 'project_three',
    description: 'interpretability methods for understanding deep learning models',
    tags: ['interpretability', 'research'],
    link: '#'
  }
];
---

<Layout title="Projects â€” Cluttered Cabinet">
  <section class="max-w-6xl mx-auto px-6 md:px-12 pt-24 pb-16">
    <div class="mb-8">
      <h1 class="font-mono text-3xl text-text-primary mb-2 font-bold tracking-tight">projects</h1>
      <p class="text-text-secondary text-sm font-mono">
        research + experiments
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {projects.map(project => (
        <article class="project-card group relative bg-surface border border-border rounded p-4 transition-all duration-200 hover:border-accent">
          <h2 class="text-lg font-mono font-bold text-text-primary group-hover:text-accent transition-colors mb-2 tracking-tight">
            {project.title}
          </h2>

          <p class="text-sm text-text-secondary mb-3 font-mono leading-relaxed">
            {project.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {project.tags.map(tag => (
              <span class="text-xs px-2 py-0.5 bg-bg text-text-secondary rounded border border-border font-mono">
                {tag}
              </span>
            ))}
          </div>

          {project.link !== '#' && (
            <a href={project.link} class="absolute inset-0" aria-label={`View ${project.title}`}></a>
          )}
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  .project-card:hover {
    box-shadow: 0 0 30px rgba(61, 245, 224, 0.25), 0 0 15px rgba(61, 245, 224, 0.15);
  }
</style>
