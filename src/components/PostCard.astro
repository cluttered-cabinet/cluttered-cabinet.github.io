---
interface Props {
  title: string;
  date: string;
  summary?: string;
  slug: string;
  tags?: string[];
  index?: number;
}

const { title, date, summary, slug, tags, index } = Astro.props;

// Format date to simple YYYY-MM-DD
const formattedDate = date;
---

<article class="post-card group border border-transparent border-b border-border/80 py-5 transition-all duration-150 hover:border-accent/60 hover:bg-surface/30">
  <a href={`/posts/${slug}`} class="block no-underline px-1">
    <div class="flex gap-4 items-start">
      {index !== undefined && (
        <span class="text-xs text-text-secondary font-mono shrink-0 w-9">
          #{String(index).padStart(2, '0')}
        </span>
      )}

      <div class="flex-1 min-w-0">
        <div class="flex items-baseline justify-between gap-4 mb-1">
          <h2 class="text-base font-mono text-text-primary group-hover:text-accent transition-colors flex-1 leading-snug">
            {title}
          </h2>
          <time class="text-xs text-text-secondary font-mono shrink-0">{formattedDate}</time>
        </div>

        {summary && (
          <p class="text-sm text-text-secondary line-clamp-2 leading-relaxed mb-3">
            {summary}
          </p>
        )}

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 tag-links">
            {tags.map(tag => (
              <a
                href={`/tags/${tag}`}
                class="tag-link inline-flex items-center gap-2 rounded-full border border-border/80 bg-surface/50 px-3 py-1 text-xs text-text-secondary hover:border-accent hover:text-accent transition-colors no-underline"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<script>
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.classList.contains('tag-link')) {
      e.preventDefault();
      e.stopPropagation();
      window.location.href = (target as HTMLAnchorElement).href;
    }
  });
</script>

<style>
  .post-card a:hover {
    text-shadow: none;
  }
</style>
