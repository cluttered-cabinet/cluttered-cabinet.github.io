---
interface Props {
  title: string;
  date: string;
  summary?: string;
  slug: string;
  tags?: string[];
  index?: number;
}

const { title, date, summary, slug, tags, index } = Astro.props;

// Format date to simple YYYY-MM-DD
const formattedDate = date;
---

<article class="post-card group border-b border-border py-4 transition-all duration-150 hover:bg-surface/30">
  <a href={`/posts/${slug}`} class="block no-underline">
    <div class="flex gap-4 items-start">
      {index !== undefined && (
        <span class="text-xs text-text-secondary font-mono shrink-0 w-8">
          #{String(index).padStart(2, '0')}
        </span>
      )}

      <div class="flex-1 min-w-0">
        <div class="flex items-baseline justify-between gap-4 mb-1">
          <h2 class="text-base font-mono text-text-primary group-hover:text-accent transition-colors flex-1">
            {title}
          </h2>
          <time class="text-xs text-text-secondary font-mono shrink-0">{formattedDate}</time>
        </div>

        {summary && (
          <p class="text-xs text-text-secondary line-clamp-1 font-mono mb-2">
            {summary}
          </p>
        )}

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2" onclick="event.stopPropagation();">
            {tags.map(tag => (
              <a
                href={`/tags/${tag}`}
                class="text-xs text-text-secondary hover:text-accent font-mono transition-colors no-underline"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .post-card a:hover {
    text-shadow: none;
  }
</style>
